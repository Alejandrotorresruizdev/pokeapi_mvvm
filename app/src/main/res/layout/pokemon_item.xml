<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:rippleColor="@color/gold"
    app:shapeAppearance="@style/CustomCardViewAppearance"
    app:strokeColor="@color/gold"
    app:strokeWidth="2dp"
    app:cardElevation="3dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/sample_img"
        card_view:srcCompat="@mipmap/sample_img"
        android:contentDescription="@string/pokemon" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingStart="5dp"
        android:text="@string/namePokemon"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gold"
        app:cardElevation="1dp"
        app:shapeAppearance="@style/CustomCardViewAppearance">

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/gold"
            android:text="1"
            android:textSize="13sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>


</com.google.android.material.card.MaterialCardView>
